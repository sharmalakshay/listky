# .env.example - Example configuration file for listky.top
# Copy this to .env and edit the values as needed.
# Never commit your real .env to git!

# Required: Path to your project root on the host (used for data volume)
# Example: /home/user/listky or /mnt/my_disk/web_servers/listky
PROJECT_LOCATION=/path/to/your/project/root

# Required: Salt for PIN hashing and IP hashing (generate a random 32+ char string)
# Use: python -c "import secrets; print(secrets.token_hex(32))"
PIN_SALT=your_random_64_char_salt_here

# Optional: Production settings
ENVIRONMENT=development
DEBUG=true